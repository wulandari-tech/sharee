<% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
  <% success_msg.forEach(function(message) { %>
    <div class="fixed top-20 right-5 bg-green-500 text-white p-4 rounded-lg shadow-lg z-50 animate-fadeInOut" role="alert">
      <%= message %>
    </div>
  <% }); %>
<% } %>

<% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
  <% error_msg.forEach(function(message) { %>
    <div class="fixed top-20 right-5 bg-red-500 text-white p-4 rounded-lg shadow-lg z-50 animate-fadeInOut" role="alert">
      <%= message %>
    </div>
  <% }); %>
<% } %>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <% errors.forEach(function(error) { %>
    <div class="fixed top-20 right-5 bg-yellow-500 text-black p-4 rounded-lg shadow-lg z-50 animate-fadeInOut" role="alert">
      <%= error.msg %>
    </div>
  <% }); %>
<% } %>

<style>
  @keyframes fadeInOut {
    0% { opacity: 0; transform: translateY(-20px); }
    10% { opacity: 1; transform: translateY(0); }
    90% { opacity: 1; transform: translateY(0); }
    100% { opacity: 0; transform: translateY(-20px); }
  }
  .animate-fadeInOut {
    animation: fadeInOut 4s ease-in-out forwards;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const alerts = document.querySelectorAll('.animate-fadeInOut');
    alerts.forEach(alert => {
      setTimeout(() => {
        alert.style.display = 'none';
      }, 4000);
    });
  });
</script>